// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model StateRoot {
  id          Int    @id @default(autoincrement())
  blockNumber String @unique
  stateRoot   String

  @@index([blockNumber])
}

model ConditionTx {
  id                   Int     @id @default(autoincrement())
  objectId             String  @unique
  condition            String
  action               String
  nextConditionAccount String
  actionTarget         String
  completed            Boolean @default(false)

  @@index([completed])
}

model MPTProof {
  id            Int    @id @default(autoincrement())
  objectId      String @unique
  conditionTxId String
  blockNumber   String
  account       String
  balance       String

  @@index([conditionTxId])
  @@index([blockNumber])
  @@index([account])
}

/// Saves the latest cursor for a given key.
model Cursor {
  id       String @id
  eventSeq String
  txDigest String
}
